        </div>

        <!-- Add more testimonials as needed -->
    </div>

    <!-- Slider Controls -->
    <div class="testimonial-controls">
        <button class="prev-button">Previous</button>
        <button class="next-button">Next</button>
    </div>
</div>


<style>
    .testimonial-section {
    max-width: 1152px;
    margin: auto;
    padding: 96px 24px;
    text-align: center;
}

.testimonial-header {
    font-size: 4rem;
    font-weight: bold;
    margin-bottom: 40px;
}

.testimonial-slider {
    display: flex;
    overflow: hidden; /* Hide the scrollbar */
    scroll-snap-type: x mandatory;
    gap: 0; /* No gap between items */
}

.testimonial-item {
    flex: 0 0 100%; /* Take up 100% of the slider's width */
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 24px;
    padding: 32px;
    scroll-snap-align: center;
    transition: transform 0.3s ease;
}

.testimonial-item:hover {
    transform: scale(1.05);
}

.testimonial-image {
    border-radius: 50%;
    width: 100px;
    height: 100px;
    object-fit: cover;
    margin-right: 24px;
}

.testimonial-content {
    text-align: left;
}

.testimonial-content p {
    font-size: 1.5rem;
    line-height: 1.75rem;
}

.testimonial-rating {
    margin-top: 16px;
    color: #60a5fa;
    font-size: 1.5rem;
}

.testimonial-name {
    margin-top: 8px;
    font-weight: bold;
    font-size: 1rem;
}

.testimonial-controls {
    display: flex;
    justify-content: center;
    margin-top: 40px;
}

.testimonial-controls button {
    background-color: #60a5fa;
    color: white;
    padding: 8px 16px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    margin: 0 8px;
    font-size: 1rem;
    font-weight: 600;
}

.testimonial-controls button:hover {
    background-color: #3b82f6;
}

/* Media Queries */
@media (max-width: 768px) {
    .testimonial-item {
        flex-direction: column;
        text-align: center;
    }

    .testimonial-image {
        margin-bottom: 16px;
    }

    .testimonial-content {
        text-align: center;
    }
}

</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
    const slider = document.querySelector('.testimonial-slider') as HTMLElement | null;
    const prevButton = document.querySelector('.prev-button') as HTMLButtonElement | null;
    const nextButton = document.querySelector('.next-button') as HTMLButtonElement | null;

    if (slider && prevButton && nextButton) {
        let currentIndex = 0;
        const testimonials = Array.from(slider.children) as HTMLElement[]; // Cast children as an array of HTMLElement
        const totalTestimonials = testimonials.length;

        function updateSliderPosition() {
            const currentTestimonial = testimonials[currentIndex];
            if (currentTestimonial) {
                slider!.scrollTo({  // Use the non-null assertion operator here
                    left: currentTestimonial.offsetLeft,
                    behavior: 'smooth'
                });
            }
        }

        prevButton.addEventListener('click', () => {
            if (currentIndex > 0) {
                currentIndex--;
            } else {
                currentIndex = totalTestimonials - 1; // Go to the last testimonial
            }
            updateSliderPosition();
        });

        nextButton.addEventListener('click', () => {
            if (currentIndex < totalTestimonials - 1) {
                currentIndex++;
            } else {
                currentIndex = 0; // Go to the first testimonial
            }
            updateSliderPosition();
        });

    } else {
        console.error('Slider or control buttons not found in the DOM');
    }
});

</script>